
<% @categories.each do |category| %>
  <p><%= link_to category.title, category_path(category) %></p>
<% end if @categories %>

<% @items.each do |item| %>
  <% unless item.inventory == 0 %>
  <p><%= item.title %> | <%= number_to_currency(item.price/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
<% end %>
<% end if @items %>